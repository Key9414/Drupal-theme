{#
/**
 * @file
 * Bayteq Developer Portal - Page template.
 *
 * Available variables:
 * - page: The page render array with regions
 * - logo_url: Path to the logo
 * - is_front: Whether this is the front page
 * - user_logged_in: Whether the user is logged in
 * - user_name: The current user's display name
 */
#}

{% if not is_login_page %}
{# ========== HEADER ========== #}
<header class="site-header">
  <div class="container">
    <a href="{{ path('<front>') }}" class="site-logo">
      <span class="site-logo__text">bayteq</span>
    </a>

    <nav class="main-nav" aria-label="{{ 'Main navigation'|t }}">
      <ul class="main-nav__list">
        <li class="main-nav__item">
          <a href="{{ path('<front>') }}" class="main-nav__link {{ is_front ? 'is-active' : '' }}">
            <svg class="nav-icon" viewBox="0 0 20 20" fill="currentColor"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/></svg>
            {{ 'Inicio'|t }}
          </a>
        </li>
        <li class="main-nav__item">
          <a href="/apis" class="main-nav__link">
            <svg class="nav-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
            {{ 'Catálogo APIs'|t }}
          </a>
        </li>
        <li class="main-nav__item">
          <a href="/documentacion" class="main-nav__link">
            <svg class="nav-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/></svg>
            {{ 'Documentación'|t }}
          </a>
        </li>
        <li class="main-nav__item">
          <a href="/crear-app" class="main-nav__link">
            <svg class="nav-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/></svg>
            {{ 'Crear App'|t }}
          </a>
        </li>
      </ul>
    </nav>

    <div class="header-actions">
      <button class="header-actions__btn" aria-label="{{ 'Search'|t }}">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/></svg>
      </button>
      <button class="header-actions__btn" aria-label="{{ 'Notifications'|t }}">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor"><path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/></svg>
        <span class="notification-badge"></span>
      </button>
      <div class="user-menu">
        <div class="user-menu__avatar">D</div>
        <span class="user-menu__name">Developer</span>
        <svg class="user-menu__chevron" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
      </div>
    </div>
  </div>
</header>
{% endif %}

{# ========== MAIN CONTENT ========== #}
<main id="main-content" role="main">
  {{ page.content }}
</main>

